@{
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/signalr/dist/browser/signalr.js"></script>

<link rel="import" href="/components/xenon-photo-card/xenon-photo-card.html" />
<link rel="import" href="/components/paper-toast/paper-toast.html" />
<link rel="import" href="/components/xenon-date/xenon-date.html" />
<link rel="import" href="/components/iron-ajax/iron-ajax.html" />

<dom-module id="page-module">
    <template>
        <iron-ajax auto id="ajax"
                   url="/api/chat"
                   handle-as="json"
                   loading="{{loading}}"
                   last-response="{{messages}}"></iron-ajax>

        <xenon-photo-card heading="@ViewData["Title"]">
            <main>
                <div class="chat">
                    <template is="dom-repeat" items="{{messages}}" restamp>
                        <div class="row">
                            <xenon-date class="date" value="{{item.date}}" show-time></xenon-date>
                            <div class="author">{{item.author}}</div>
                            <div class="message">{{item.message}}</div>
                        </div>
                    </template>
                </div>
            </main>
        </xenon-photo-card>
        <paper-toast id="toast"></paper-toast>
    </template>
    <script>
        Polymer({
            is: "page-module",
            properties: {
                messages: { Type: Array, notify: true, value: [] },
                connection: { Type: Object, value: {} }
            },
            _onMessageReceived: function (message) {
                if (!message) return;
                this.push("messages", message);
            },
            ready: function () {
                var that = this;
                this.connection = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();

                this.connection.on("ReceiveMessage", function (message) {
                    that._onMessageReceived(message);
                });

                this.connection.start().catch(function (err) {
                    return console.error(err.toString());
                });
            }
        });
    </script>
</dom-module>

<page-module></page-module>
